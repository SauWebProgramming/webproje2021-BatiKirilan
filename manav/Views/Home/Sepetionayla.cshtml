@{
    ViewData["Title"] = "Sepetionayla";
}

@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer
<div class="container">
    <div class="card">
        <div class="card-header">
            <h3 class="float-left text-dark">
                @localizer["Sepeti Onayla"]
            </h3>
        </div>
        <div class="card-body mx-5 my-2">
            <form method="post" class="row">
                <div class="col-3">
                    @if (ViewBag.cart != null)
                    {
                        <ul>
                            @foreach (var item in @ViewBag.cart)
                            {
                                <li>@item.Ad - @item.Fiyat TL</li>
                            }
                        </ul>
                        <div>Toplam Fiyat : @ViewBag.toplam TL</div>
                    }
                </div>
                <div class="form-group col-6">
                    <label>@localizer["Müsteri Adresi"]</label>
                    <input class="form-control" name="adres" />
                </div>
                <div class="form-group col-12 d-flex justify-content-center align-items-center">
                    <div class="d-flex justify-content-center ">
                        <a href="@Url.Action("Index","Home")" class="btn btn-danger  mx-1"><i class="fa fa-arrow-left"></i>@localizer["Geri"]</a>
                        <button class="btn btn-success mx-1" type="submit"><i class="fa fa-plus"></i>@localizer["Ekle"]</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

