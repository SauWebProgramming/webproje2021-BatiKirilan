@model manav.Areas.Admin.Models.UrunEkleDTO
@{
    ViewData["Title"] = "Ekle";
}
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer
<div class="container">
    <div class="card">
        <div class="card-header">
            <h3 class="float-left text-dark">
                @localizer["Yeni Ürün"]
            </h3>
        </div>
        <div class="card-body mx-5 my-2">
            <form method="post" class="row">
                <div class="form-group col-6">
                    <label>@localizer["Urun Adı"]</label>
                    <input class="form-control" asp-for="UrunAdı" />
                </div>
                <div class="form-group col-6">
                    <label>@localizer["Urun Aciklama"]</label>
                    <input class="form-control" asp-for="UrunAciklama" />
                </div>
                <div class="form-group col-6">
                    <label>@localizer["Urun Fiyat"]</label>
                    <input class="form-control" asp-for="UrunFiyat" />
                </div>
                <div class="form-group col-6">
                    <label>@localizer["Urun Resim"]</label>
                    <input class="form-control" asp-for="UrunResim" />
                </div>
                <div class="form-group col-6">
                    <label>@localizer["Urun Kategori"]</label>
                    <select class="form-control" asp-for="Kategori">
                        <option value="0">Seçiniz</option>
                        @foreach (var item in ViewBag.kategoriler)
                        {
                            <option value="@item.KategoriID">@item.KategoriAd</option>
                        }
                    </select>
                </div>
                <div class="form-group col-12 d-flex justify-content-center align-items-center">
                    <div class="d-flex justify-content-center ">
                        <a href="@Url.Action("Index","Product")" class="btn btn-danger  mx-1"><i class="fa fa-arrow-left"></i>@localizer["Geri"]</a>
                        <button class="btn btn-success mx-1" type="submit"><i class="fa fa-plus"></i>@localizer["Ekle"]</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>



